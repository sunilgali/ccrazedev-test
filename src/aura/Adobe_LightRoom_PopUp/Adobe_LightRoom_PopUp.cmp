<aura:component >
    <p style="font-size: 2.4rem;
              font-weight: 200;
              margin-bottom: 20px;text-align:center"> Everything you need for photography. And then some.</p>
    
    
    
    <div style="padding-top:20px;background-color:#f5f5f5;">
        <lightning:layout multipleRows="true" verticalAlign="start" horizontalAlign="stretch">
            
